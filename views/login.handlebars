<div>
    <div class="row">
        <h2>Login</h2>
        <form class="col s6" id="login-form">
            <div class="row">
                <div class="input-field col s6">
                    <input type="email" name="email_login" id="email_login" class="validate" />
                    <label for="email_login" class="">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label for="password_login">Password</label>
                    <input type="text" name="password_login" id="password_login" />
                </div>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Log In</button>
        </form>
    </div>

    <div>
        <h2>Sign-Up</h2>
        <form id="signup-form">
            <div class="row">
                <div class="input-field col s6">
                    <label for="username_signup" class="">Username</label>
                    <input type="text" name="username_signup" id="username_signup" />
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label htmlFor="id" for="email_signup" class="">Email</label>
                    <input type="email" name="email_signup" id="email_signup" />
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <label htmlFor="id" for="password_signup">Password</label>
                    <input type="text" name="password_signup" id="password_signup" />
                </div>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Sign-Up</button>
        </form>
    </div>
</div>

<script src="/javascript/login.js"></script>
<script src="/javascript/sign-up.js"></script>