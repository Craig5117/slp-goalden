<div class="sing-student-container">
    <h4>
        {{username}}
    </h4>
    <div>
        <h4 class="left">
            Student Name: {{studentName}}
        </h4>

        {{#each studentGoals as |studentGoal|}}
        <table class="striped centered responsive-table" style="border: 3px #516360 solid;">
            <thead>
                <tr>
                    <th>Goal</th>
                    <th>Goal Description</th>
                    <th>Trial Date</th>
                    <th>Successful Trials</th>
                    <th>Percentage of Successful Trials</th>
                </tr>
            </thead>

            <tbody>
                {{#each studentGoal.trials as |trial|}}
                <tr>
                    <td>{{studentGoal.goal.name}}</td>
                    <td>{{studentGoal.goal.description}}</td>
                    <td>{{trial.date}}</td>
                    <td>{{trial.successful}}</td>
                    <td>{{trial.percent}}</td>                      
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/each}}
    </div>
</div>


<footer class="footer-sing-student">
    <a class="waves-effect waves-light btn modal-trigger" href="/students/add-studentgoal/{{studentId}}">Add Goal to
        Student</a>
    <a href="/students/trial-submit/{{studentGoal.id}}" class="btn waves-effect waves-light">+ Trial Data</a>
</footer>


